{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // TODO(T005): Evaluate removing skipLibCheck to surface type issues in dependency libs.
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    // TODO(T005): allowJs is enabled in derived tsconfig.json; confirm necessity and consider removal to enforce pure TS.
    "typeRoots": ["src/types", "node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/*"],
      "~main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "e2e/**/*",
    "vitest.config.ts",
    "playwright.config.ts"
  ],
  "exclude": [
    "scripts/**/*",
    "src/main/scripts/**/*"
  ]
}
