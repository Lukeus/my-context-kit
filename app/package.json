{
  "name": "context-sync",
  "productName": "Context-Sync",
  "version": "0.1.0",
  "description": "Desktop app for managing GitHub context repositories for spec-driven development",
  "type": "module",
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": ".vite/build/index.cjs",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-forge package",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:e2e": "pnpm package && playwright test",
    "test:e2e:ui": "pnpm package && playwright test --ui",
    "test:e2e:debug": "pnpm package && playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "pnpm test && pnpm test:e2e"
  },
  "keywords": [],
