{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [
    "scripts/**/*",
    "src/main/scripts/**/*",
    "dist/**/*",
    "node_modules/**/*",
    ".vite/**/*"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn"
  }
}
