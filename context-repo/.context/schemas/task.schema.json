{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "task.schema.json",
  "title": "Task",
  "description": "Implementation task",
  "type": "object",
  "required": ["id", "title", "status"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^T-[0-9]{3,}$"
    },
    "title": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["todo", "doing", "done", "blocked", "needs-review"]
    },
    "related": {
      "type": "object",
      "properties": {
        "feature": { "type": "string", "pattern": "^FEAT-[0-9]{3,}$" },
        "spec": { "type": "string", "pattern": "^SPEC-[0-9]{3,}$" },
        "service": { "type": "string" }
      }
    },
    "owner": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "items": { "type": "string" }
    },
    "doneCriteria": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
