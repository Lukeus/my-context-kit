{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "package.schema.json",
  "title": "Package",
  "description": "Software package or library",
  "type": "object",
  "required": ["id", "name", "version", "type"],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["npm", "maven", "pypi", "gem", "nuget"]
    },
    "repository": {
      "type": "string",
      "format": "uri"
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" }
    },
    "uses": {
      "type": "object",
      "properties": {
        "services": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
