{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "service.schema.json",
  "title": "Service",
  "description": "Backend or infrastructure service",
  "type": "object",
  "required": ["id", "name", "type"],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["backend", "frontend", "infrastructure"]
    },
    "repository": {
      "type": "string",
      "format": "uri"
    },
    "api": {
      "type": "object",
      "properties": {
        "spec": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" }
    },
    "consumers": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
