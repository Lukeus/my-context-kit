{
	"name": "my-context-kit",
	"version": "1.0.0",
	"private": true,
	"packageManager": "pnpm@10.19.0",
	"scripts": {
		"start": "pnpm --filter context-sync start",
		"dev": "pnpm --filter context-sync start",
		"build": "pnpm --filter context-sync build",
		"package": "pnpm --filter context-sync package",
		"make": "pnpm --filter context-sync make",
		"publish": "pnpm --filter context-sync publish",
		"lint": "pnpm --filter context-sync lint",
		"format": "pnpm --filter context-sync format",
		"typecheck": "pnpm --filter context-sync typecheck",
		"test": "pnpm --filter context-sync test",
		"test:e2e": "pnpm --filter context-sync test:e2e",
		"test:e2e:ui": "pnpm --filter context-sync test:e2e:ui",
		"test:e2e:debug": "pnpm --filter context-sync test:e2e:debug",
		"test:e2e:report": "pnpm --filter context-sync test:e2e:report",
		"test:all": "pnpm --filter context-sync test:all && pnpm service:test",
		"install:all": "pnpm install && cd app && pnpm install",
		"version:patch": "node scripts/version-bump.mjs patch",
		"version:minor": "node scripts/version-bump.mjs minor",
		"version:major": "node scripts/version-bump.mjs major",
		"release:prepare": "pnpm lint && pnpm typecheck && pnpm test:all",
		"release:tag": "git tag -a v$(node -p \"require('./app/package.json').version\") -m \"Release v$(node -p \"require('./app/package.json').version\")\"",
		"release:push": "git push origin main && git push origin --tags",
		"service:setup": "pnpm --filter @context-kit/service run setup:dev",
		"service:start": "pnpm --filter @context-kit/service start",
		"service:dev": "pnpm --filter @context-kit/service dev",
		"service:test": "pnpm --filter @context-kit/service test",
		"service:lint": "pnpm --filter @context-kit/service lint",
		"service:typecheck": "pnpm --filter @context-kit/service typecheck",
		"service:clean": "pnpm --filter @context-kit/service clean",
		"service:health": "pnpm --filter @context-kit/service health",
		"service:bootstrap": "pnpm --filter @context-kit/service bootstrap"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"electron",
			"electron-winstaller",
			"faiss-node"
		],
		"ignoredBuiltDependencies": [
			"esbuild",
			"faiss-node"
		],
		"peerDependencyRules": {
			"ignoreMissing": [
				"diff"
			]
		},
		"overrides": {
			"tmp@<=0.2.3": ">=0.2.4"
		}
	},
	"dependencies": {
		"diff-match-patch": "^1.0.5"
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "^6.0.1",
		"vite": "^7.1.12",
		"vitest": "^4.0.5"
	}
}
